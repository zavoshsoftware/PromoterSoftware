@model Models.Customer

@{
    ViewBag.Title = "ویرایش مشتری";
}


<div class="col-md-4">
    <div class="main-card mb-3 card">
        @ViewBag.description
    </div>
</div>
                        
<div class="col-md-8">
<div class="main-card mb-3 card">
<div class="card-body">


@using (Html.BeginForm("Edit", "Customers",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
        @Html.HiddenFor(model => model.Id)

         <div class="position-relative form-group">
            @Html.LabelFor(model => model.Title)
                                     <input name="Title" id="Title" placeholder= "@Html.DisplayNameFor(m=>m.Title)" type="text" class="form-control" value="@Model.Title">
                @Html.ValidationMessageFor(model => model.Title)
            </div>
       

         <div class="position-relative form-group">
            @Html.LabelFor(model => model.ContactPersonFullName)
                                     <input name="ContactPersonFullName" id="ContactPersonFullName" placeholder= "@Html.DisplayNameFor(m=>m.ContactPersonFullName)" type="text" class="form-control" value="@Model.ContactPersonFullName">
                @Html.ValidationMessageFor(model => model.ContactPersonFullName)
            </div>
       

         <div class="position-relative form-group">
            @Html.LabelFor(model => model.ContactPersonCellNumber)
                                     <input name="ContactPersonCellNumber" id="ContactPersonCellNumber" placeholder= "@Html.DisplayNameFor(m=>m.ContactPersonCellNumber)" type="text" class="form-control" value="@Model.ContactPersonCellNumber">
                @Html.ValidationMessageFor(model => model.ContactPersonCellNumber)
            </div>
       

        	<div class="position-relative form-check">
			 <label class="form-check-label">
			     @Html.CheckBoxFor(model => model.IsActive)
			 @Html.DisplayNameFor(m => m.IsActive)
			 </label>    
                     @Html.ValidationMessageFor(model => model.IsActive)
            </div>
       

	 <div style="display: none;">@Html.EditorFor(model => model.CreationDate)</div>
         <div class="position-relative form-group">
            @Html.LabelFor(model => model.Description)
                                 <textarea name="Description" id="Description" placeholder= "@Html.DisplayNameFor(m=>m.Description)" class="form-control"></textarea>
                @Html.ValidationMessageFor(model => model.Description)
            </div>
       

   <div class="button-box">
                <input type="submit" value="ثبت" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
           
        </div>
        
  
}
        </div>
        </div>
        </div>

