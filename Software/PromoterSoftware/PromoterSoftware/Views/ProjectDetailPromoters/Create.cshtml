@model Models.ProjectDetailPromoter

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

<div class="col-md-4">
    <div class="main-card mb-3 card">
        @ViewBag.description
    </div>
</div>
                        
<div class="col-md-8">
<div class="main-card mb-3 card">
<div class="card-body">

@using (Html.BeginForm("Create", "ProjectDetailPromoters",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    

    <div class="position-relative form-group">
            @Html.LabelFor(model => model.UserId)
            
                @Html.DropDownList("UserId",null, String.Empty,new{ @class= "form-control" })
                @Html.ValidationMessageFor(model => model.UserId)
        </div>
    <div class="position-relative form-group">
            @Html.LabelFor(model => model.ProjectDetailId)
            
                @Html.DropDownList("ProjectDetailId",null, String.Empty,new{ @class= "form-control" })
                @Html.ValidationMessageFor(model => model.ProjectDetailId)
        </div>
			<div class="position-relative form-check">
			 <label class="form-check-label">
			     @Html.CheckBoxFor(model => model.IsFullTime)
			 @Html.DisplayNameFor(m => m.IsFullTime)
			 </label>
            
                       </div>
			<div class="position-relative form-check">
			 <label class="form-check-label">
			     @Html.CheckBoxFor(model => model.IsActive)
			 @Html.DisplayNameFor(m => m.IsActive)
			 </label>
            
                       </div>
    <div class="position-relative form-group">
            @Html.LabelFor(model => model.Description)
            
                   <textarea name="Description" id="Description" placeholder= "@Html.DisplayNameFor(m=>m.Description)" class="form-control"></textarea>

                @Html.ValidationMessageFor(model => model.Description)
        </div>



       <div class="button-box">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
           
        </div>
   
}
        </div>
        </div>
        </div>

