@model Models.User

@{
    ViewBag.Title = "افزودن " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

@section styles{
	@Html.Partial("BackEndLayout/_KendoResourcesPartial")
}
<div class="col-md-4">
    <div class="main-card mb-3 card">
        @ViewBag.description
    </div>
</div>
                        
<div class="col-md-8">
<div class="main-card mb-3 card">
<div class="card-body">

@using (Html.BeginForm("Create", "Users",FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    

    <div class="position-relative form-group">
            @Html.LabelFor(model => model.FullName)
            
                       <input name="FullName" id="FullName" placeholder= "@Html.DisplayNameFor(m=>m.FullName)" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.FullName)
        </div>
    <div class="position-relative form-group">
            @Html.LabelFor(model => model.CellNum)
            
                       <input name="CellNum" id="CellNum" placeholder= "@Html.DisplayNameFor(m=>m.CellNum)" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.CellNum)
        </div>
    <div class="position-relative form-group">
            @Html.LabelFor(model => model.Password)
            
                       <input name="Password" id="Password" placeholder= "@Html.DisplayNameFor(m=>m.Password)" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.Password)
        </div>
    <div class="position-relative form-group">
            @Html.LabelFor(model => model.NationalCode)
            
                       <input name="NationalCode" id="NationalCode" placeholder= "@Html.DisplayNameFor(m=>m.NationalCode)" type="text" class="form-control">
                @Html.ValidationMessageFor(model => model.NationalCode)
        </div>
